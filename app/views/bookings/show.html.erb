
<h1 class="title">Flight Booker</h1>

<h2 class="thank-you">Thank you for booking with Flight Booker. Please see your flight confirmation below.</h2>


<div class="ticket-container">

  <div class="grid-1">
    <h3>Departure Airport: <%= @booking.flight.departure_airport.code %></h3>
    <h3>Arrival Airport: <%= @booking.flight.arrival_airport.code %></h3>
  </div>

  <div class="grid-2">
    <h3>Date: <%= @booking.flight.start_date %></h3>
    <h3>Flight Time: <%= minutes_to_hours(@booking.flight.flight_duration_minutes) %></h3>
  </div>

  <div class="grid-3">
    <h3 class="passengers">Passenger Info</h3>
    <% @booking.passengers.each do |passenger| %>
    <h3>
    <%= passenger.name %>
    </h3>
    
    <% end %>
    
    
    
  </div>

  <div class="grid-4">
    <div class="airplane-container">
      <%= render partial: 'airplane' %>
    </div>
  </div>

</div>